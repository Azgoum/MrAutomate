<!DOCTYPE html>
<html lang="{{ locale or 'en' }}">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  {% include "partials/cookies.njk" %}
  {% include "partials/tracking.njk" %}
  {% include "partials/metatags.njk" %}

  <link rel="stylesheet" href="/assets/css/main.css?v={{ build.timestamp.raw }}">

  {# Custom Head Scripts #}
  {% if scripts_head.code %}{{ scripts_head.code | safe }}{% endif %}
</head>
<body class="min-h-screen flex flex-col bg-stone-50 text-stone-900 antialiased">
  {# Custom Body Scripts #}
  {% if scripts_body.code %}{{ scripts_body.code | safe }}{% endif %}

  {% include "partials/header.njk" %}

  <main class="flex-1">
    {{ content | safe }}
  </main>

  {% include "partials/footer.njk" %}

  <script defer src="/assets/js/main.js?v={{ build.timestamp.raw }}"></script>
  {% if pagefind %}
  <script src="/pagefind/pagefind-ui.js?v={{ build.timestamp.raw }}" onload="new PagefindUI({ element: '#pagefind', showSubResults: true, showImages: false });"></script>
  {% endif %}

  {# Custom Footer Scripts #}
  {% if scripts_footer.code %}{{ scripts_footer.code | safe }}{% endif %}
</body>
</html>
